#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run i18n validation
echo "ğŸŒ Validating i18n translations..."
npx tsx scripts/validate-i18n.ts

# If validation fails, prevent commit
if [ $? -ne 0 ]; then
  echo "âŒ i18n validation failed. Please fix the errors before committing."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ“ Running TypeScript type check..."
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"